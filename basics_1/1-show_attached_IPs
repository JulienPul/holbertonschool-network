#!/usr/bin/env bash
# Display all active IPv4 addresses on this machine, one per line

set -euo pipefail
# - ip -4 -o addr show : IPv4 only, one line per address
# - awk '{print $4}'    : keep the "IP/CIDR"
# - cut -d/ -f1         : keep only the IP
ip -4 -o addr show | awk '{print $4}' | cut -d/ -f1
