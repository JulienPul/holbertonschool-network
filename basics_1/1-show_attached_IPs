#!/usr/bin/env bash
# Display all active IPv4 addresses on this machine, one per line

# Cas 1 : 'ip' dispo (Ubuntu standard)
if command -v ip >/dev/null 2>&1; then
  ip -o -4 addr show up | awk '{print $4}' | cut -d/ -f1
# Cas 2 : fallback portable
elif command -v hostname >/dev/null 2>&1; then
  hostname -I | tr ' ' '\n' | awk -F. 'NF==4 && $0 != ""'
# Cas 3 : trÃ¨s vieux environnements
elif command -v ifconfig >/dev/null 2>&1; then
  ifconfig | awk '/inet /{print $2}'
fi
